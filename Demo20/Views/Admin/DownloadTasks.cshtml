
@{
    ViewBag.Title = "DownloadTasks";
    Layout = "~/Views/shared/Common_Admin_Layout.cshtml";
}

@using Demo20.Models;
@model IEnumerable<UploadAssignmentMaster>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10 table-responsive border mt-4 mb-4 pt-2 pb-3" style="background-color: #ebf4fa">
        <h2 class="text-center text-primary card-header pt-2">View Assignment</h2><hr />
        <table class="table table-striped table-bordered">
            <tr>
                <th>Upload_Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>FileName</th>
                <th>Upload_DT</th>
                <th>EmailId</th>
                <th class="text-center">Download</th>
            </tr>
            @{
                foreach (UploadAssignmentMaster uam in Model)
                {
                     <tr>
                          <td>@uam.Upload_Id</td>
                          <td>@uam.Title</td>
                          <td>@uam.Description</td>
                          <td>@uam.FileName</td>
                          <td>@uam.Upload_DT</td>
                          <td>@uam.Uploaded_By</td>
                          <td>
                              <a href="/Admin/DownloadTasks1?fname=@uam.FileName">
                                    <span class="fa fa-file fa-download text-center"></span>
                              </a>
                          </td>
                     </tr>
                }
            }
        </table>
    </div>
    <div class="col-sm-1"></div>
</div>
