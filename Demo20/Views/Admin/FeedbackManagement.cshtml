
@{
    ViewBag.Title = "FeedbackManagement";
    Layout = "~/Views/shared/Common_Admin_Layout.cshtml";
}
@using Demo20.Models
@model IEnumerable<FeedbackMaster>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10 table-responsive border mt-4 mb-4" style="background-color: #ebf4fa">
        <h2 class="text-center text-primary card-header pt-2">Feedback Management</h2>
        <hr />
        <table class="table table-striped table-bordered">
            <tr>
                <th>Feedback Id</th>
                <th>Feedback By</th>
                <th>Title</th>
                <th>Message</th>
                <th>EmailId</th>
                <th>Feedback Date</th>
            </tr>
            @{
                foreach (FeedbackMaster fm in Model)
                {
                    string picname = "";
                    if (fm.StudyMaster.UserPic == null)
                    {
                        if (fm.StudyMaster.Gender.ToUpper().Trim() == "MALE")
                        {
                            picname = "/Contant/images/male.png";
                        }
                        else
                        {
                            picname = "/Contant/images/female.png";
                        }
                    }
                    else
                    {
                        picname = "/Contant/UserPics/" + fm.StudyMaster.UserPic;
                    }
                    <tr class="text-center">
                        <td>@fm.Feedback_Id</td>
                        <td class="text-center">
                            <img src="@picname" width="80px;" height="80px;" style="border-radius:50%" /><br />
                            @fm.StudyMaster.Name
                        </td>
                        <td>@fm.Topic</td>
                        <td>@fm.Message</td>
                        <td>@fm.UserId</td>
                        <td>@fm.Feedback_DT</td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="col-sm-1"></div>
</div>

