
@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/shared/Common_Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 pb-3 border mt-4 mb-4" style="background-color: #ebf4fa">
        <h2 class="text-primary text-center pt-2">Send Email</h2>
        <h5 class="text-success text-center pt-2">@ViewBag.Msg</h5><hr />
        <form action="/Admin/SendEmail" method="post">
            <input type="email" name="SendTo" placeholder="Enter Email Id" class="form-control" /><br />
            <input type="text" name="Subject" placeholder="Enter Title of Subject" class="form-control" /><br />
            <textarea name="Message" class="form-control" placeholder="Enter message"></textarea><br />
            <center><input type="submit" value="Submit" class="btn btn-primary  mb-2" style="font-size:18px;width:15%;"/></center>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>

