
@{
    ViewBag.Title = "StudyMaterials";
    Layout = "~/Views/shared/Common_Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 border mt-4 mb-4" style="background-color: #ebf4fa">
        <h2 class="text-center card-header text-primary pt-2">Study Materials</h2>
        <h5 class="text-center text-success pt-2">@ViewBag.Message</h5><hr />
        <form action="/Admin/StudyMaterials" method="post" enctype="multipart/form-data">
            <input type="text" class="form-control" placeholder="Subject" name="Subject" /><br />
            <input type="text" class="form-control" placeholder="Title" name="Title" /><br />
            <textarea class="form-control" name="Description" placeholder="Description of Assignment"></textarea><br />
            <input type="file" class="form-control" name="FileName" />
            <center><input type="submit" value="Save" class="btn btn-primary mt-3 mb-3" style="font-size:18px;width:15%;"/></center>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>

