
@{

    ViewBag.Title = "UploadAssignment";
    Layout = "~/Views/shared/Common_Admin_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 border mt-4 mb-4 pb-2" style="background-color:#ebf4fa">
        <h2 class="text-center card-header text-primary mt-2">Upload Assignment</h2>
        <h5 class="text-center text-success pt-2">@ViewBag.Message</h5><hr />
        <form action="/Admin/UploadAssignment" method="post" enctype="multipart/form-data">
            <input type="text" class="form-control" placeholder="Title" name="Title" /><br />
            <input type="text" class="form-control" placeholder="Description of Assignment" name="Description" /><br />
            <input type="date" class="form-control" placeholder="Date of Submission" name="Submission" /><br />
            <input type="file" class="form-control" name="Userfile" /><br />
            <center><input type="submit" value="Save" class="btn btn-primary mt-2 mb-2" style="font-size:18px;width:15%;"/></center>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>

