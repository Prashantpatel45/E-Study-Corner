
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/Common_General_Layout.cshtml";
}
@using Demo20.Models
@model IEnumerable<NotificationMaster>
<script>
    $(document).ready(function () {
        $("#btn").click(function () {
            var name, email, mobno, msg;
            name = $("#EName").val();
            email = $("#EEmail").val();
            mobno = $("#EMobileNo").val();
            msg = $("#EMessage").val();
            var obj = { Name: name, Email: email, Mobile_No: mobno, Message: msg };
            $.getJSON("/General/SaveEnquiryByAJAX", obj, function (result) {
                if (result == "SUCCESS") {
                    alert("Enquiry saved successfully.");
                    $("#btnclose").trigger("click");
                    $("#EName").val("");
                    $("#EEmail").val("");
                    $("#EMobileNo").val("");
                    $("#EMessage").val("");
                }
                else {
                    alert("Sorry! unable to save enquiry.");
                }
            });

        });
    });
</script>

<div class="row">
    <div class="col-sm-11 notification bg-info" id="mar" style="font-size:15px;padding-top:11px;">
        <marquee direction="left" onmouseover="stop()" onmouseout="start()">
            <ul id="noti">
                @{
                    int n = 1;
                    foreach (NotificationMaster nm in Model)
                    {
                        <i class="fa fa-circle text-warning"></i>
                        <span style="margin-right:10px;">@nm.Noti_Message
                        @if(n == 1)
                         {
                             <img src="" width="42px"/>
                              n++;
                          }
                         </span>
                    }
                 }
            </ul>
        </marquee>
    </div>
    <div class="col-sm-1 Enquirym m-0 p-0">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="etbootstrap" style="width:100%;min-height:55px;">Enquiry</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="Name" class="col-form-label">Name:</label>
                                <input type="text" name="Name" class="form-control" id="EName">
                            </div>
                            <div class="mb-3">
                                <label for="Email" class="col-form-label">Email:</label>
                                <input type="email" name="Email" class="form-control" id="EEmail">
                            </div>
                            <div class="mb-3">
                                <label for="MobileNo" class="col-form-label">Mobile Number:</label>
                                <input type="number" required name="Mobile_No" class="form-control" id="EMobileNo">
                            </div>
                            <div class="mb-3">
                                <label for="EnquiryMessage" class="col-form-label">Message:</label>
                                <textarea class="form-control" name="Message" id="EMessage"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button id="btnclose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" id="btn" class="btn btn-primary">Save Enquriy</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

