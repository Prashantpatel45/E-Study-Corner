
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Common_Admin_Layout</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/contant/css/Admin_Design.css" rel="stylesheet" />
    <script src="~/contant/js/Js/jquery-3.7.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container-fluid">
        <div class="row header">
            <div class="col-sm-2 logo p-0 m-0 text-center">
                <img src="~/contant/images/logo2.png" style="height:80px;width:50%;" />
            </div>
            <div class="col-sm-8">
                <h1 class="card-header text-center pt-2" style="color:white;">Welcome to Admin Zone</h1>
            </div>
            <div class="col-sm-2 text-center username" style="padding-top:20px;">Hi, Admin</div>
        </div>
        <div class="row menu" style="background-color: #0dcaf0;">
            <div class="col-sm-12">
                <nav class="navbar navbar-expand-lg navbar-light ">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    @Html.ActionLink("StudentManagement", "StudentManagement", "Admin", new { @class = "nav-link active", style = "color:white" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("UploadAssignment", "UploadAssignment", "Admin", new { @class = "nav-link active", style = "color:white" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("StudyMaterials", "StudyMaterials", "Admin", new { @class = "nav-link active", style = "color:white" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("DownloadTasks", "DownloadTasks", "Admin", new { @class = "nav-link active", style = "color:white" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("NotificationManagement", "NotificationManagement", "Admin", new { @class = "nav-link active", style = "color:white" })
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle nav-link active" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color:white">
                                        Response Management
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li>
                                            @Html.ActionLink("EnquiryManagement", "EnquiryManagement", "Admin", new { @class = "dropdown-item" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("SendEmail", "SendEmail", "Admin", new { @class = "dropdown-item" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("AssignmentManagement", "AssignmentManagement", "Admin", new { @class = "dropdown-item" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("FeedbackManagement", "FeedbackManagement", "Admin", new { @class = "dropdown-item" })
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle nav-link active" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color:white">
                                        Settings
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li>
                                            @Html.ActionLink("ChangePassword", "ChangePassword", "Admin", new { @class = "dropdown-item" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("Logout", "Logout", "Admin", new { @class = "dropdown-item" })
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <div class="row main">
            <div class="col-sm-12">
                @RenderBody()
            </div>
        </div>
        <div class="row footer" id="footer">
            <div class="col-sm-1"></div>
            <div class="col-sm-7">
                Copyright &copy; All rights reserved to E-Study Corner.
            </div>
            <div class="col-sm-3">
                Developed by: Prashant Patel
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>
</body>
</html>
